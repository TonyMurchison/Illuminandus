<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tonymurchison.illuminandus">

    <!--
        android:largeHeap="true"
        -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"


        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity android:name=".MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainLevelSelect"/>
        <activity android:name=".LevelSelectHidden"/>
        <activity android:name=".LevelSelectLocked"/>
        <activity android:name=".LevelSelectChanging"/>
        <activity android:name=".LevelSelectNormal"/>
        <activity android:name=".LevelPlayHiddenWalls" />
        <activity android:name=".LevelPlayChangingWalls" />
        <activity android:name=".LevelPlayKeys"/>
        <activity android:name=".LevelPlayNormalWalls"/>
        <activity android:name=".FinishedScreen"/>
        <activity android:name=".InfoScreenLevel"/>
        <activity android:name=".InfoScreenGameType"/>

        <uses-permission android:name="android.permission.WAKE_LOCK"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"
        />

</manifest>
